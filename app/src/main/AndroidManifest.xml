<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sebastian.scislak.pokerstatistics">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.SaveDataBefore"
            android:parentActivityName=".Activities.MainMenu">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainMenu"/>
        </activity>

        <activity
            android:name=".Activities.SaveDataAfter"
            android:parentActivityName=".Activities.MainMenu">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainMenu"/>
        </activity>

        <activity
            android:name=".Activities.ShowData"
            android:parentActivityName=".Activities.MainMenu">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainMenu"/>
        </activity>

        <activity
            android:name=".Activities.SettingActivity"
            android:parentActivityName=".Activities.MainMenu">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.MainMenu"/>
        </activity>

    </application>
</manifest>