<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/id_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/name_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorSeparatorSaving">
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/profit_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Profit: "
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/average_profit_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Avg. table: "
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tables_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tables: "
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/max_player_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="max_seat: "
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/length_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Length: "
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/hands_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Hands: "
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/going_to_flop_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="See flop: "
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/going_to_flop_without_blinds_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="without blinds: "
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/winning_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Winning: "
                        android:textSize="17dp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/winning_without_show_item"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="without show: "
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorSeparatorSaving"/>
    </LinearLayout>
</android.support.v7.widget.CardView>